# Enable the rewrite engine
RewriteEngine On

# Set the base directory (adjust if your site is in a subdirectory, e.g., /subfolder/)
RewriteBase /

# Enable FollowSymLinks
Options +FollowSymLinks -Indexes

# Force HTTPS (uncomment in production after testing)
# RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove www (uncomment in production after testing)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirect old service URLs to new SEO-friendly URLs
RewriteRule ^app-development/?$ /app-development-services-nyc [R=301,L,NC]
RewriteRule ^crm-development/?$ /crm-development-services-nyc [R=301,L,NC]
RewriteRule ^ai-development/?$ /ai-development-services-nyc [R=301,L,NC]
RewriteRule ^api-development/?$ /api-development-services-nyc [R=301,L,NC]
RewriteRule ^blockchain-development/?$ /blockchain-development-services-nyc [R=301,L,NC]
RewriteRule ^digital-marketing/?$ /digital-marketing-services-nyc [R=301,L,NC]
RewriteRule ^ui-ux-development/?$ /ui-ux-design-development-nyc [R=301,L,NC]
RewriteRule ^web-development/?$ /web-development-services-nyc [R=301,L,NC]

# Remove .php extension
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^(.+?)\.php$ /$1 [R=301,L,NC]

# Route all requests to router.php if not a real file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ router.php?url=$1 [QSA,L]

# Custom error pages
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Protect sensitive files
<FilesMatch "^(composer\.json|composer\.lock|package\.json|package-lock\.json|\.gitignore|\.htaccess)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>